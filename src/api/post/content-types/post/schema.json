{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "excerpt": {
      "type": "text"
    },
    "Content": {
      "type": "blocks",
      "required": true
    },
    "Date": {
      "type": "date",
      "required": true
    },
    "CoverImage": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
